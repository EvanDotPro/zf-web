<?php if ($this->message == 'Page not found'): ?>
    <div class="error-404">
        <div class="error-404-speech-bubble">
            <?php echo $this->dynamicHeader('subPageMainHeader', $this->message); ?>

            <p class="first">
                <?php
                    $notFoundText = array(
                        "NO, Zend Framework is <strong>not</strong> to blame for this!",
